<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dp"
    android:background="@color/lightGray"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/orden_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="20"
            android:fontFamily="@font/lato"
            android:lines="1"
            android:text="29/05/2019"
            android:textColor="@color/darkGray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="80"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/orden_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_light"
                android:text="Medicamento"
                android:textColor="@color/darkGray"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/ordenIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_healing_black_24dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:background="@color/lightGreen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/drIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_face_black_24dp" />

        <TextView
            android:id="@+id/orden_doctor"
            style="@style/behindMenuItemLabel"
            android:text="Darla Harris" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="Orden:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orden_obs"
            style="@style/behindMenuItemLabel"
            android:lines="4"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/lugarIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event_available_black_24dp" />

        <TextView
            style="@style/behindMenuItemLabel"
            android:text="Vence " />

        <TextView
            android:id="@+id/orden_vigencia"
            style="@style/behindMenuItemLabel"
            android:layout_marginLeft="0dp"
            android:text="12 / 06 / 2019" />
    </LinearLayout>


</LinearLayout>