<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="100"
    android:layout_gravity="center_horizontal"
    android:background="@color/lightGray"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/cita_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:lines="1"
        android:text="29/05/2019"
        android:textColor="@color/darkGray"
        android:textSize="21sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:background="@color/lightGreen"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginVertical="10dp">

        <ImageView android:id="@+id/espIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_school_black_24dp"/>
        <TextView
            android:id="@+id/cita_esp"
            android:text="OdontologÃ­a"
            style="@style/behindMenuItemLabel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginVertical="10dp">

        <ImageView android:id="@+id/timeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_access_time_black_24dp" />
        <TextView
            android:id="@+id/cita_hora"
            android:text="3:00 PM"
            style="@style/behindMenuItemLabel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginVertical="10dp">

        <ImageView android:id="@+id/drIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_face_black_24dp" />
        <TextView
            android:id="@+id/cita_doctor"
            android:text="Darla Harris"
            style="@style/behindMenuItemLabel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginVertical="10dp">

        <ImageView android:id="@+id/lugarIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_place_black_24dp" />
        <TextView
            android:id="@+id/cita_consultorio"
            android:text="Planta BU"
            style="@style/behindMenuItemLabel" />
    </LinearLayout>

</LinearLayout>